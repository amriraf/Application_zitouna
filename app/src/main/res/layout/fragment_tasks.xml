<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tasks_fragment"
    tools:context=".MainActivity"
    android:background="@drawable/unnamed"
    android:focusableInTouchMode="true">

    <androidx.core.widget.NestedScrollView
        style="@style/NestedScrollBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.myapplication.customviews.ZitounaTextView
            android:id="@+id/text_share"
            android:text="Modifier les paramètres de tarification"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/circle_shape_drawable"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/s1"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Taux_rendement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Taux de rendement espéré (i)"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/s2"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="30dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Fraisadministration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Frais d’administration"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>





        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/s3"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="30dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Chargements_acquisition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Chargements_d’acquisition"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/s4"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="30dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Taux_bourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Taux de frais de la bourse"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/s5"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="30dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/taux_rachat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Taux de frais de rachat"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_gravity="center"
            android:layout_width="180dp"
            app:icon="@drawable/ic_save_white_24dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/btn_save"
            android:background="@drawable/button_simuler"
            android:text="enrigstrer"/>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>